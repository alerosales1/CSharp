using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace PerimetroTriangulo
{
    class Program
    {
        static void Main(string[] args)
        {
            int lado1 = 0, lado2 = 0, lado3 = 0;
            Console.WriteLine("Informe o tamanho do primeiro lado : ");
            lado1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Informe o tamanho do segundo lado : ");
            lado2 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Informe o tamanho do terceiro lado: ");
            lado3 = Convert.ToInt32(Console.ReadLine());
            int soma = (lado1 + lado2 + lado3);
            Console.WriteLine("O perimetro eh : " + (soma));
            Console.ReadKey();


        }
    }
}
