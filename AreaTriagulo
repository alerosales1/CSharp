using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace AreaTriagulo
{
    class Program
    {
        static void Main(string[] args)
        {
            double baseT = 0, alturaT = 0;
            Console.WriteLine("Informe a base do triangulo: ");
            baseT = Convert.ToDouble(Console.ReadLine()); //converte string para double
            Console.WriteLine("Informe a altura do triangulo: ");
            alturaT = Convert.ToDouble(Console.ReadLine()); //converte string para double
            Console.WriteLine("Area = " + ((baseT * alturaT) / 2));
            Console.ReadKey();
        }
    }
}
